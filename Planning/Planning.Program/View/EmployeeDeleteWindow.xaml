<Window x:Class="Planning.View.EmployeeDeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Planning.View"
        mc:Ignorable="d"
        Title="EmployeeDeleteWindow" Height="100" Width="300">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <ComboBox x:Name="GroupComboBox" Margin="3" Width ="160" ItemsSource="{Binding GroupList}"  SelectedItem="{Binding SelectedGroup}" SelectedIndex="0"></ComboBox>
            <ComboBox x:Name="EmployeeComboBox" Margin="3" Width ="160" ItemsSource="{Binding EmployeeList}" SelectedItem="{Binding SelectedEmployee}" SelectedIndex="0"></ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Padding="3" Margin="5">Annullér</Button>
            <Button Padding="10,3,10,3" Margin="5">Slet</Button>
        </StackPanel>
    </Grid>
</Window>
