<Window x:Class="Planning.View.GroupDeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Planning.View"
        mc:Ignorable="d"
        Title="GroupDeleteWindow" Height="100" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <ComboBox x:Name="GroupComboBox" Margin="3" Width ="160" ItemsSource="{Binding GroupList}"  SelectedItem="{Binding SelectedGroup}" SelectedIndex="0"></ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Padding="3" Margin="5" Command="{Binding CancelCommand}">Annullér</Button>
            <Button Padding="10,3,10,3" Margin="5" Command="{Binding ConfirmCommand}">Slet Gruppe</Button>
        </StackPanel>
        
    </Grid>
</Window>
