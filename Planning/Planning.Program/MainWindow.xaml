<Window x:Class="Planning.Program.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Planning.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized">
    <Grid>
        <TabControl Margin="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="Post">
                <local:Mailbox></local:Mailbox>
            </TabItem>
            <TabItem Header="Planer" IsSelected="True">
                <local:ScheduleView/>
            </TabItem>
            <TabItem Header="Grupper">
                <local:GroupView/>
            </TabItem>
            <TabItem Header="Borgere">
                <local:CitizenView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
