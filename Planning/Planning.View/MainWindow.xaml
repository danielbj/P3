<Window x:Class="Planning.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Planning.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button x:Name="MailBoxButton" Margin="3" Content="Postkasse"/>
            <Button x:Name="SomeButton" Margin="3" Content="SomeButton"/>
        </StackPanel>
        <TabControl Grid.Column="1" Margin="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="Planer">
                <local:ScheduleView/>
            </TabItem>
            <TabItem Header="Overblik">
                <local:OverviewView/>
            </TabItem>
            <TabItem Header="Borger">
                <local:CitizenView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
