<Page x:Class="HifiPrototype2.PopupChooseEmployee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HifiPrototype2"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PopupChooseEmployee">

    <Grid Background="White">
        <TextBlock Text="Choose employee" FontSize="20"/>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button Margin="3">Ok</Button>
            <Button Margin="3">Cancel</Button>
        </StackPanel>
    </Grid>
</Page>
