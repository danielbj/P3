<UserControl x:Class="HifiPrototype2.View.AssignmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HifiPrototype2" 
             xmlns:presenters="clr-namespace:HifiPrototype2.Functions"
             
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Button Width="auto" Margin="0">
        <Button.DataContext>
            <presenters:AssignmentPresenter/>
        </Button.DataContext>
        <StackPanel>
            <TextBlock x:Name="Description"/>
            <TextBlock x:Name="Duration"/>
            <TextBlock x:Name="Location"/>
        </StackPanel>
    </Button>
</UserControl>
