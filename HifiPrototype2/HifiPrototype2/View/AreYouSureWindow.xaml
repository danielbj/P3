<Window x:Class="HifiPrototype2.View.AreYouSureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HifiPrototype2.View"
        xmlns:viewModels="clr-namespace:HifiPrototype2.View"
        mc:Ignorable="d"
        Title="Er du sikker?" SizeToContent="Height" Width="300" WindowStartupLocation="CenterOwner" Topmost="True" WindowStyle="ToolWindow">
    <DockPanel LastChildFill="False" VerticalAlignment="Top">
        <Label Content="{Binding Description}" DockPanel.Dock="Top"/>
        <Button Margin="3" Width="40" Content="No" DockPanel.Dock="Right" Click="NoButton_Click"/>
        <Button Margin="3" Width="40" Content="Yes" IsDefault="True" DockPanel.Dock="Right" Click="YesButton_Click"/>
    </DockPanel>
</Window>
